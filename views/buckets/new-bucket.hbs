<div class="container register">
  <div class="row">
    <div class="col-md-3 left-new">
      <h3>Bucket Details <i class="fa-solid fa-plus"></i></h3>
      <p>Enter the details of the new bucket.</p>
    </div>
    <div class="col-md-9 right bg-new">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <form class="row gy-3 register-form" method="post" action="/buckets/create">
            <div class="col-md-6">
              <div class="d-flex justify-content-center header">
                <h3>Bucket</h3>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="bucketName" placeholder="Enter bucket name" value="" />
              </div>
              <div class="form-group">
                <textarea  class="form-control" name="bucketDescription" placeholder="Write description"></textarea>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex justify-content-center header">
                <h3>Resource</h3>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="resourceLink" placeholder="Resource link" value="" />
              </div>
              <input type="submit" class="custom-btn" value="Create" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>