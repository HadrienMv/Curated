<div class="container register">
  <div class="row">
    <div class="col-md-3 left-new">
      <h3>Bucket Update <i class="fa-solid fa-plus"></i></h3>
      <p>Update the bucket details</p>
    </div>
    <div class="col-md-9 right bg-new">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <form class="row gy-3 register-form" method="post" action="/buckets/{{bucket._id}}/update">
            <div class="col-md-8">
              <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Name of  bucket" value="{{bucket.name}}" />
              </div>
              <div class="form-group">
                <textarea class="form-control" name="description" placeholder="Write the description">{{bucket.description}}</textarea>
              </div>

              <input type="submit" class="custom-btn" value="Update" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>