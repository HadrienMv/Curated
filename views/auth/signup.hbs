<div class="container register">
  <div class="row">
    <div class="col-md-3 left">
      <img src="/images/logo.png" alt="" />
      <h3>Welcome</h3>
      <p>Complete the registeration to start sharing your own playlist bucket</p>
      <a href="/login">Login</a>
    </div>
    <div class="col-md-9 right">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <form class="row gy-3 register-form" method="post" action="/register">
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control" name="username" placeholder="Username" value="" />
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="email" placeholder="email" value="" />
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password *" value="" />
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password *"
                  value="" />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control" name="location" placeholder="Where do you stay" value="" />
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="interests" placeholder="Interests" value="" />
              </div>
              <div class="form-group">
                <input type="date" class="form-control" name="dob" placeholder="Date of birth" value="" />
              </div>
              <div class="form-group">
                <textarea class="form-control" name="aboutMe" placeholder="Say something about yourself"></textarea>
              </div>

              <input type="submit" class="custom-btn" value="Register" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>