<section class="vh-100" style="background-color: #e2eaee;">
  <div class="container py-4 h-100">
    <div class="row d-flex justify-content-center h-100">
      <div class="col col-sm-12 col-md-11 col-lg-10 p-2">
        <form method="POST" action="/profile/edit">
        <div class="card p-4" style="border-radius: 15px;">
          <div class="card-body">
            <div class="d-flex align-items-top pb-2 text-black">
              <div class="col-2 flex-shrink-0 me-2">
                <img src={{profilePic}}
                  alt="User profile picture" class="img-fluid"
                  style="width: 180px; border-radius: 100px;">
              </div>
              <div class="col-12 flex-grow-1 ms-3">
                <h5 class="mb-1">{{username}}</h5>
                <p class="mb-2 pb-1" style="color: #2b2a2a;">Member since {{newCreatedAt}}</p>
                <section class="d-flex justify-content-start align-items-top">
                    <div class="flex-grow-0 me-2">
                        <div class="d-flex justify-content-start align-items-stretch rounded-3 p-2"
                    style="background-color: #efefef;">
                            <div class="col-10">
                                <p class="small text-muted my-0">About me</p>
                                <textarea name="aboutMe" class="form-control mb-0 mt-1 text-primary" cols="35" rows="2">{{aboutMe}}</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 mx-2">
                        <div class="d-flex justify-content-between align-items-center rounded-3 p-2"
                    style="background-color: #efefef;">
                            <div>
                                <p class="small text-muted my-0">Contributions</p>
                                <p class="my-0">{{bucketsCount}}</p>
                            </div>
                        </div>
                    </div>
                </section>
              </div>
            </div>
            <section class="d-flex justify-content-start my-3">
                <div class="col-6">
                    <div class="d-flex justify-content-start rounded-3 p-2 mb-3 me-2"
                        style="background-color: #efefef;">
                        <div class="col-10">
                            <p class="small text-muted mb-1">Email</p>
                            <input type="text" class="form-control mb-0 text-primary" name="email" value="{{email}}" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-start rounded-3 p-2 me-2"
                        style="background-color: #efefef;">
                        <div class="col-10">
                            <p class="small text-muted mb-1">Interests</p>
                            <input type="text" class="form-control mb-0  text-primary" name="interests" value="{{interests}}" />
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-start rounded-3 p-2 mb-3 ms-2"
                        style="background-color: #efefef;">
                        <div class="col-10">
                            <p class="small text-muted mb-1">Country</p>
                            <input type="text" class="form-control mb-0 text-primary" name="location" value="{{location}}" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-start rounded-3 p-2 ms-2"
                        style="background-color: #efefef;">
                        <div class="col-10">
                            <p class="small text-muted mb-1">Date of birth</p>
                            <input type="date" class="form-control mb-0 text-primary" name="dob" value="{{newDob}}" />
                        </div>
                    </div>
                </div>
            </section>
            <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary me-1">Save changes</button>
                    <a href="/profile" class="btn btn-secondary">Cancel</a>
            </div>         
        </form>
        </div>
      </div>
    </div>
  </div>
</section>