<div class="card-body">
  <div class="card-title">{{name}}</div>
  <p class="card-text">{{description}}</p>
  <div class="d-flex justify-content-between">
    <div class="bucket-action d-flex">
      <a href="/{{_id}}/update" class="btn btn-warning">UPDATE</a>
      <form action="/delete/{{_id}}" method="post">
        <button class="btn btn-danger">DELETE</button>
      </form>
    </div>
    <div class="add-resoure">
      <a href="/{{_id}}/add" class="btn btn-success">ADD RESOURCE</a>
    </div>
  </div>
</div>